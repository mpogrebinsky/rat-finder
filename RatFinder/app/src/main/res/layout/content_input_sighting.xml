<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team45.ratfinder.controller.InputSightingActivity"
    tools:showIn="@layout/activity_input_sighting">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-31dp"
        android:layout_marginLeft="16dp"
        android:text="Latitude"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/coordinate1Input"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Longitude"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Location Type"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/locationTypeInput"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Borough"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/boroughInput"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="City"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cityInput"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Zip code"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/zipcodeInput"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Address"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/addressInput"
        android:layout_marginBottom="0dp" />

    <EditText
        android:id="@+id/coordinate2Input"
        android:layout_width="205dp"
        android:layout_height="36dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinate1Input" />

    <EditText
        android:id="@+id/coordinate1Input"
        android:layout_width="206dp"
        android:layout_height="36dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTypeInput" />

    <EditText
        android:id="@+id/locationTypeInput"
        android:layout_width="206dp"
        android:layout_height="36dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boroughInput" />

    <EditText
        android:id="@+id/boroughInput"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityInput" />

    <EditText
        android:id="@+id/cityInput"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zipcodeInput" />

    <EditText
        android:id="@+id/zipcodeInput"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressInput" />

    <EditText
        android:id="@+id/addressInput"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginLeft="119dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/cancelsight_id"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:text="Cancel"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="370dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_id"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:layout_marginLeft="191dp"
        android:text="Submit"
        android:layout_marginTop="370dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="325dp"
        android:layout_height="19dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="343dp"
        android:text="Info not valid. User could not be registered."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
